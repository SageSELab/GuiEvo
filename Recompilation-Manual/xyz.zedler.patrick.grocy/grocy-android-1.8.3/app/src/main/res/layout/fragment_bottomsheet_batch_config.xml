<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:singleLine="true"
        android:textAlignment="viewStart"
        android:fontFamily="@font/roboto_mono_bold"
        android:text="@string/title_batch_config"
        android:textAppearance="@style/TextAppearance.Grocy.BottomSheet.Title"/>

    <View
        style="@style/Theme.Grocy.Divider"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:overScrollMode="ifContentScrolls">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linear_batch_config_bbd"
                style="@style/Theme.Grocy.ListItem.TwoLine.Icon.Clickable"
                android:background="@drawable/bg_list_item_surface">

                <ImageView
                    style="@style/Theme.Grocy.ListItem.Icon"
                    android:src="@drawable/ic_round_event"
                    tools:ignore="ContentDescription" />

                <LinearLayout style="@style/Theme.Grocy.ListItem.TextBox">

                    <TextView
                        style="@style/Theme.Grocy.ListItem.OverLine"
                        android:text="@string/setting_ask_best_before_date" />

                    <TextView
                        android:id="@+id/text_batch_config_bbd"
                        style="@style/Theme.Grocy.ListItem.Title"
                        android:text=""/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_batch_config_price"
                style="@style/Theme.Grocy.ListItem.TwoLine.Icon.Clickable"
                android:background="@drawable/bg_list_item_surface">

                <ImageView
                    style="@style/Theme.Grocy.ListItem.Icon"
                    android:src="@drawable/ic_round_cash_multiple"
                    tools:ignore="ContentDescription" />

                <LinearLayout style="@style/Theme.Grocy.ListItem.TextBox">

                    <TextView
                        style="@style/Theme.Grocy.ListItem.OverLine"
                        android:text="@string/setting_ask_price" />

                    <TextView
                        android:id="@+id/text_batch_config_price"
                        style="@style/Theme.Grocy.ListItem.Title"
                        android:text=""/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_batch_config_store"
                style="@style/Theme.Grocy.ListItem.TwoLine.Icon.Clickable"
                android:background="@drawable/bg_list_item_surface">

                <ImageView
                    style="@style/Theme.Grocy.ListItem.Icon"
                    android:src="@drawable/ic_round_store"
                    tools:ignore="ContentDescription" />

                <LinearLayout style="@style/Theme.Grocy.ListItem.TextBox">

                    <TextView
                        style="@style/Theme.Grocy.ListItem.OverLine"
                        android:text="@string/setting_ask_store" />

                    <TextView
                        android:id="@+id/text_batch_config_store"
                        style="@style/Theme.Grocy.ListItem.Title"
                        android:text=""/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_batch_config_location"
                style="@style/Theme.Grocy.ListItem.TwoLine.Icon.Clickable"
                android:background="@drawable/bg_list_item_surface">

                <ImageView
                    style="@style/Theme.Grocy.ListItem.Icon"
                    android:src="@drawable/ic_round_place"
                    tools:ignore="ContentDescription" />

                <LinearLayout style="@style/Theme.Grocy.ListItem.TextBox">

                    <TextView
                        style="@style/Theme.Grocy.ListItem.OverLine"
                        android:text="@string/setting_ask_location" />

                    <TextView
                        android:id="@+id/text_batch_config_location"
                        style="@style/Theme.Grocy.ListItem.Title"
                        android:text=""/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_batch_config_stock_location"
                style="@style/Theme.Grocy.ListItem.TwoLine.Icon.Clickable"
                android:background="@drawable/bg_list_item_surface">

                <ImageView
                    style="@style/Theme.Grocy.ListItem.Icon"
                    android:src="@drawable/ic_round_place"
                    tools:ignore="ContentDescription" />

                <LinearLayout style="@style/Theme.Grocy.ListItem.TextBox">

                    <TextView
                        style="@style/Theme.Grocy.ListItem.OverLine"
                        android:text="@string/setting_ask_location" />

                    <TextView
                        android:id="@+id/text_batch_config_stock_location"
                        style="@style/Theme.Grocy.ListItem.Title"
                        android:text=""/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_batch_config_specific"
                style="@style/Theme.Grocy.ListItem.TwoLine.Icon.Clickable"
                android:background="@drawable/bg_list_item_surface">

                <ImageView
                    style="@style/Theme.Grocy.ListItem.Icon"
                    android:src="@drawable/ic_round_gps_fixed"
                    tools:ignore="ContentDescription" />

                <LinearLayout style="@style/Theme.Grocy.ListItem.TextBox">

                    <TextView
                        style="@style/Theme.Grocy.ListItem.OverLine"
                        android:text="@string/setting_ask_specific_item" />

                    <TextView
                        android:id="@+id/text_batch_config_specific"
                        style="@style/Theme.Grocy.ListItem.Title"
                        android:text=""/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_batch_config_consume_all"
                style="@style/Theme.Grocy.ListItem.TwoLine.Icon.Clickable"
                android:background="@drawable/bg_list_item_surface">

                <ImageView
                    style="@style/Theme.Grocy.ListItem.Icon"
                    android:src="@drawable/ic_round_consume_product"
                    tools:ignore="ContentDescription" />

                <LinearLayout style="@style/Theme.Grocy.ListItem.TextBox.Stretch">

                    <TextView
                        style="@style/Theme.Grocy.ListItem.Title"
                        android:text="@string/setting_consume_all" />

                </LinearLayout>

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch_batch_config_consume_all"
                    style="@style/Widget.Grocy.Switch"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Grocy" parent="Base.Grocy">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:navigationBarColor">@color/background</item>
        <item name="android:windowSplashscreenContent">@drawable/splash_content</item>
        <item name="android:navigationBarDividerColor">@color/stroke_secondary</item>
    </style>

    <style name="Theme.Grocy.NoNavBarDivider" parent="Theme.Grocy">
        <item name="android:navigationBarDividerColor">@color/transparent</item>
    </style>

    <style name="Theme.Grocy.Camera" parent="Theme.Grocy">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarDividerColor">@color/transparent</item>
    </style>

    <style name="Theme.Grocy.BottomAppBar" parent="Theme.Grocy">
        <item name="android:navigationBarColor">@color/primary</item>
        <item name="android:navigationBarDividerColor">@color/transparent</item>
    </style>

    <style name="Theme.Grocy.BottomSheetDialog" parent="Base.Grocy.BottomSheetDialog">
        <item name="android:navigationBarColor">@color/surface</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:navigationBarDividerColor">@color/stroke_secondary</item>
    </style>

</resources>